[flake8]
# B = bugbear
# B9 = bugbear opinionated (incl line length)
select = C,E,F,W,B,B9
# E203: whitespace before ':' (black behaviour)
# E501: flake8 line length (covered by bugbear B950)
# W503: line break before binary operator (black behaviour)
ignore = E203,E501,W503
#
max-line-length = 200
#
extend-ignore = E203
#
exclude =
    .git,
    .config,
    __pycache__,
    docs/source/conf.py,
    old,
    build,
    dist,
    venv,
    .venv,
    .vscode
#
max-complexity = 16
#
per-file-ignores=
    __init__.py:F401